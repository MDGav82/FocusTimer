@startuml pomodoro_domain
left to right direction

class Utilisateur {
  +id : int
  +email : string
  +nom : string
  +motDePasseHash : string
}

class ParametresUtilisateur {
  +id : int
  +autostartPomodoro : bool
  +autostartPause : bool
  +autoRestartCycles : bool
  +notificationsActives : bool
  +rappelsActifs : bool
  +intervalleRappelMinutes : int
}

class Tache {
  +id : int
  +titre : string
  +description : string
  +estimationMinutes : int
  +statut : StatutTache
  +dateCreation : DateTime
  +dateFin : DateTime
}


class TemplatePomodoro {
  +id : int
  +nom : string
  +description : string
  +estParDefaut : bool
}

class PeriodeTemplate {
  +id : int
  +ordre : int
  +type : TypePeriode
  +dureeMinutes : int
}

class SessionPomodoro {
  +id : int
  +dateDebut : DateTime
  +dateFin : DateTime
}

class PeriodeSession {
  +id : int

  +dureePrevueMinutes : int
  +dureeReelleMinutes : int
  +etat : EtatPeriode
}

' Relations

Utilisateur "1" -- "1" ParametresUtilisateur

Utilisateur "1" -- "0..*" Tache
Utilisateur "1" -- "0..*" TemplatePomodoro
Utilisateur "1" -- "0..*" SessionPomodoro

TemplatePomodoro "1" *-- "1..*" PeriodeTemplate

Tache "0..1" -- "0..*" SessionPomodoro : "t√¢che active"

SessionPomodoro "1" *-- "1..*" PeriodeSession

SessionPomodoro "0..1" -- "1" TemplatePomodoro : "utilise"

@enduml
